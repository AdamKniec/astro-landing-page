    <div class="leftColumnWrapper">
      <div class="imagesWrapper">
        <img src="../../src/images/logo-footer.svg" class="logo" />
        <div class="socialMediaWrapper">
          <img src="../../src/images/icon-facebook.svg" alt="" /><img
